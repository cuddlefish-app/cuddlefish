{
	"name": "cuddlefish-comments",
	"displayName": "Cuddlefish Comments",
	"description": "Google Docs-style comments for code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:cuddlefish-comments.helloWorld"
	],
	"main": "./out/extension.js",
	"enableProposedApi": true,
	"contributes": {
		"commands": [
			{
				"command": "cuddlefish-comments.helloWorld",
				"category": "CF Comments",
				"title": "Hello World"
			},
			{
				"command": "cuddlefish-comments.startThread",
				"title": "Start thread",
				"enablement": "!commentIsEmpty && !activeEditorIsDirty"
			},
			{
				"command": "cuddlefish-comments.commentOnThread",
				"title": "Comment",
				"enablement": "!commentIsEmpty"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "cuddlefish-comments.startThread",
					"when": "false"
				},
				{
					"command": "cuddlefish-comments.commentOnThread",
					"when": "false"
				}
			],
			"comments/commentThread/context": [
				{
					"command": "cuddlefish-comments.startThread",
					"group": "inline",
					"when": "commentController == cuddlefish-comments && commentThreadIsEmpty"
				},
				{
					"command": "cuddlefish-comments.commentOnThread",
					"group": "inline",
					"when": "commentController == cuddlefish-comments && !commentThreadIsEmpty"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"@octokit/rest": "^18.12.0",
		"nodegit": "^0.28.0-alpha.9"
	}
}
